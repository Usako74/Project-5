{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}
    <main>
        <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>

        <div class="display-flex">
            <figure class="img-form text-center w-25">
                <img src="{{ asset('img/user/img1.png') }}" alt="Image d'enregistrement" class="w-75 circle-rad">
            </figure>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form method="post" class="w-25 m-form">
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">



                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Se rappeller de moi
                    </label>
                </div>

                <div class="form-group text-center">
                    <button class="btn btn-info" type="submit">
                        Sign in
                    </button>
                </div>
            </form>
        </div>
    </main>
{% endblock %}
