{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
    <main>
        <h1>Administration - Liste des projets</h1>

        <table class="table">
            <thead class="thead-design">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Titre</th>
                <th scope="col">URL</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Status</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody class="tbody-design">
            {% for project in projects %}
                <tr>
                    <th scope="row" class="align-middle">{{ project.id }}</th>
                    <td class="align-middle">{{ project.title }}</td>
                    <td class="align-middle">{{ project.url }}</td>
                    <td class="align-middle">{{ project.description }}</td>
                    <td><img src="{{  asset('uploads/images/' ~ project.image) }}" class="min-img" alt="image de projet"></td>
                    <td class="text-center align-middle">
                        {% if project.status == 1 %}
                            En Ligne
                        {% else %}
                            Hors Ligne
                        {% endif %}
                    </td>
                    <td class="text-center align-middle"><a href="{{ path('admin-project-edit', {'id': project.id}) }}">Modifier</a></td>
                    <td class="text-center align-middle"><a href="{{ path('admin-project-delete', {'id': project.id}) }}">X</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(projects) }}
        </div>

    </main>
{% endblock %}
